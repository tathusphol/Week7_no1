pipeline {
    agent any
    parameters {
        string(name: 'NAME', defaultValue: 'Defualt', description: 'Enter your name')
        choice(name: 'age', defaultValue : 0 , description: 'Enter your age')
    }
    stages {
        stage('Example') {
            steps {
                echo "Hello from Slave ${params.NAME} of ${params.age}"
                sh "python myscript.py ${params.NAME} --age ${params.age}"
                echo "Success"
            }
        }
    }
}